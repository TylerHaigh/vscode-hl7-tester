// Place your settings in this file to overwrite default and user settings.
{
  "files.exclude": {
    "out": false // set this to true to hide the "out" folder with the compiled JS files
  },
  "search.exclude": {
    "out": true // set this to false to include "out" folder in search results
  },
  // Turn off tsc task auto detection since we have the necessary tasks as npm scripts
  "typescript.tsc.autoDetect": "off",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#55a583",
    "activityBar.background": "#55a583",
    "activityBar.foreground": "#15202b",
    "activityBar.inactiveForeground": "#15202b99",
    "activityBarBadge.background": "#e1d5e9",
    "activityBarBadge.foreground": "#15202b",
    "commandCenter.border": "#e7e7e799",
    "sash.hoverBorder": "#55a583",
    "statusBar.background": "#448368",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#55a583",
    "statusBarItem.remoteBackground": "#448368",
    "statusBarItem.remoteForeground": "#e7e7e7",
    "titleBar.activeBackground": "#448368",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#44836899",
    "titleBar.inactiveForeground": "#e7e7e799"
  },
  "peacock.color": "#448368",
}